{
  "name": "local-task-tracker",
  "version": "1.0.0",
  "description": "Windows-optimized desktop productivity application for time tracking and task management",
  "main": "dist/server/server/index.js",
  "scripts": {
    "app": "node launch-app.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon --exec \"node --expose-gc --max-old-space-size=400 -r ts-node/register src/server/index.ts\"",
    "client:dev": "cd src/client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "cd src/client && npm run build",
    "build:exe": "node scripts/build-exe.js",
    "check:build": "node scripts/check-build-ready.js",
    "start": "node --max_old_space_size=80 --max_semi_space_size=8 --optimize_for_size --expose-gc dist/server/server/index.js",
    "test": "jest"
  },
  "keywords": [
    "productivity",
    "time-tracking",
    "task-management",
    "windows",
    "desktop"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "node-windows": "^1.0.0-beta.8",
    "sqlite3": "^5.1.6",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/sqlite3": "^3.1.11",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "nodemon": "^3.0.2",
    "pkg": "^5.8.1"
  }
}
